# https://github.com/github-linguist/linguist/blob/main/lib/linguist/languages.yml

# Lua
*.lua    text eol=lf diff linguist-language=Lua linguist-detectable=true

# Shell/Bash/Zsh
*.sh     text eol=lf diff linguist-language=Shell linguist-detectable=true
*.bash   text eol=lf diff linguist-language=Shell linguist-detectable=true
*.zsh    text eol=lf diff linguist-language=Shell linguist-detectable=true
zshenv   text eol=lf diff linguist-language=Shell linguist-detectable=true
zshrc    text eol=lf diff linguist-language=Shell linguist-detectable=true

# YAML
*.yaml   text eol=lf diff linguist-language=YAML linguist-detectable=true
*.yml    text eol=lf diff linguist-language=YAML linguist-detectable=true

# TOML
*.toml   text eol=lf diff linguist-language=TOML linguist-detectable=true
configs/yazi/theme.toml text eol=lf diff linguist-language=TOML linguist-detectable=false

# JSON
*.json   text eol=lf diff linguist-language=JSON linguist-detectable=true

# Markdown
*.md     text eol=lf diff linguist-language=Markdown linguist-detectable=false

# Images (no text conversion or diff)
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
